<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:animateLayoutChanges="true"
    android:fadingEdgeLength="80dp"
    android:requiresFadingEdge="vertical"
    android:scrollbars="vertical"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:animateLayoutChanges="true"
        android:background="@android:color/transparent"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:adjustViewBounds="true"
            android:background="@color/colorPrimary"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allgemeine Angaben: "
            android:textSize="12pt"
            android:textColor="@color/white">
        </TextView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2pt"
            >
            <TextView
                android:id="@+id/geschlechtText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geschlecht: "
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                />

            <Spinner
                android:id="@+id/geschlechtSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:entries="@array/gender"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/geburtsjahrText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geburtsjahr: "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="9pt"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <Spinner
                android:id="@+id/yearOfBirthSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Postleitzahl: "
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                />
            <EditText
                android:id="@+id/postleitzahlEditText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:inputType="number"
                android:maxLength="5"
                android:hint="z.B. 10999"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:focusedByDefault="false"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symptome: "
            android:textSize="12pt"
            android:textColor="@color/white">
        </TextView>

        <TextView
            android:id="@+id/wohlbefindenText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allgemeines Wohlbefinden: "
            android:textSize="9pt"
            android:textColor="@color/white"
            android:layout_marginTop="2pt"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <SeekBar
                android:id="@+id/generalHealthSeekbar"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:indeterminate="false"
                android:max="5"
                android:min="1"
                android:paddingTop="2pt"
                android:progress="5"
                android:progressTint="@color/white"
                android:thumb="@android:drawable/btn_star" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/generalHealthSeekbar"
                android:layout_below="@id/generalHealthSeekbar"
                android:textColor="@color/white"
                android:textSize="5pt"
                android:text="sehr schlecht" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sehr gut"
                android:layout_alignEnd="@+id/generalHealthSeekbar"
                android:layout_below="@id/generalHealthSeekbar"
                android:textColor="@color/white"
                android:textSize="5pt"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/coronaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Corona Virus: "
                android:textAlignment="center"
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <Spinner
                android:id="@+id/coronaVirusSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/coronaVirus"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/kontakteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anzahl der Kontakte (24h): "
                android:textAlignment="center"
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/numberOfContactsEditText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:inputType="number"
                android:maxLength="4"
                android:hint="z.B. 2"
                android:textColor="@color/white"
                android:textSize="9pt"
                android:textColorHint="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/hustenTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Husten: "
                android:textAlignment="center"
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <Spinner
                android:id="@+id/coughingSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/coughing"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/fieberTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fieber: "
                android:textAlignment="center"
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <Spinner
                android:id="@+id/temperatureSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/temperature"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/kopfschmerzenTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kopfschmerzen: "
                android:textAlignment="center"
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <Spinner
                android:id="@+id/headacheSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/headache"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/halsschmerzenTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Halsschmerzen: "
                android:textAlignment="center"
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <Spinner
                android:id="@+id/soreThroatSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/headache"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/schnupfenTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schnupfen: "
                android:textAlignment="center"
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <Spinner
                android:id="@+id/runnyNoseSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/headache"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/gliederschmerzenTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gliederschmerzen: "
                android:textAlignment="center"
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <Spinner
                android:id="@+id/limbPainSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/headache"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/durchfallTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Durchfall: "
                android:textAlignment="center"
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <Spinner
                android:id="@+id/diarrheaSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/diarrhea"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/einsamkeitTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Einsamkeit: "
                android:textAlignment="center"
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <Spinner
                android:id="@+id/lonelinessSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/loneliness"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/schlafproblemeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schlafprobleme: "
                android:textAlignment="center"
                android:textSize="9pt"
                android:textColor="@color/white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />
            <Spinner
                android:id="@+id/insomniaSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/insomnia"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/sendButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Senden"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />
    </LinearLayout>

</androidx.core.widget.NestedScrollView>